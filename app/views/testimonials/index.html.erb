<h1>Testimonials</h1>

<div class="media">
  <%= link_to 'New Testimonial', new_testimonial_path %>
  <br> 
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <!-- <th>Date</th> -->
          <th>Name</th>
          <th>Company</th>
          <th>Comment</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead> 
      <tbody>
        <% @testimonials.each do |testimonial| %>
          <tr>
            <!-- <td><%= testimonial.date %></td> -->
            <td><%= testimonial.name %></td>
            <td><%= testimonial.company %></td>
            <td><%= testimonial.comment %></td>
            <td><%= link_to 'Show', testimonial %></td>
            <td><%= link_to 'Edit', edit_testimonial_path(testimonial) %></td>
            <td><%= link_to 'Delete', testimonial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>  
</div>


